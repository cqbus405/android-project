<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook-sixth-sense"
        android:textColor="#D9000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/list_item_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="content ... "
        android:textSize="12sp"
        android:textColor="#D9000000"
        android:lineSpacingMultiplier="1.2"
        android:layout_below="@+id/list_item_title" />

    <TextView
        android:id="@+id/list_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:textSize="11sp"
        android:layout_toLeftOf="@+id/list_item_star" />

    <TextView
        android:id="@+id/list_item_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created: 2016-05-23"
        android:textSize="11sp"
        android:layout_below="@+id/list_item_description"
        android:layout_alignParentRight="true" />
</RelativeLayout>
